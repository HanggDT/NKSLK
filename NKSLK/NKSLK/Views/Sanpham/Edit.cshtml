        <div class="sec sec__shopcart">
            <div class="container">
                <div class="sec__shopcart__info col-md-12 col-xs-12 col-sm-12">
                    <div class="box-user__info panel">
                        <h2><u>Chỉnh sửa thông tin sản phẩm</u></h2>
                        <div class="content">
                            <div class="row">
                                <div class="col-md-6 col-xs-12 col-sm-6">
                                    <div class="form-group">
                                        <div class="label">Tên sản phẩm</div>

                                        <!--@Html.LabelFor(model => model.TenSP, htmlAttributes: new { @class = "control-label col-md-2" })-->
                                        <!--<div class="col-md-6">-->
                                        @Html.EditorFor(model => model.TenSP, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.TenSP, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-6 col-xs-12 col-sm-6">
                                    <div class="form-group">
                                        <div class="label">Hình ảnh</div>
                                        <input type="file" id="photo" name="photo" onchange="previewFile(this)">
                                        @*<p class="help-block">Chọn ảnh của sản phẩm</p>*@
                                        <img id="previewImg" src="/Content/images/@Model.HinhAnh" style="width: 70px; height: 70px;" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 col-xs-12 col-sm-6">
                                <div class="form-group">
                                    <div class="label">Số đăng ký</div>
                                    @Html.EditorFor(model => model.SoDangKi, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.SoDangKi, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6 col-xs-12 col-sm-6">
                                <div class="form-group">
                                    <div class="label">Hạn sử dụng</div>
                                    @Html.EditorFor(model => model.HanSuDung, new { htmlAttributes = new { @class = "form-control", @type = "date", @Value = @ViewBag.HanSuDung } })
                                    @Html.ValidationMessageFor(model => model.HanSuDung, "", new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-6 col-xs-12 col-sm-6">
                                <div class="form-group">
                                    <div class="label">Ngày đăng ký</div>
                                    @Html.EditorFor(model => model.NgayDangKi, new { htmlAttributes = new { @class = "form-control", @type = "date", @Value = @ViewBag.NgayDangKy } })
                                    @Html.ValidationMessageFor(model => model.NgayDangKi, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6 col-xs-12 col-sm-6">
                                <div class="form-group">
                                    <div class="label">Quy cách</div>
                                    <select class="form-control" name="QuyCach">
                                        @foreach (var item in ViewBag.cat)
                                        {
                                            if (Model.QuyCach == @item.QuyCach)
                                            {
                                                <option selected>@item.QuyCach</option>
                                            }
                                            else
                                            {
                                                <option>@item.QuyCach</option>
                                            }

                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2 col-xs-12 col-sm-2">
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Save" class="btn btn-primary" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2 col-xs-12 col-sm-2">
                                <div class="col-2">
                                    <a href="@Url.Action("Index", "Sanpham") " class="btn btn-primary">Back</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
